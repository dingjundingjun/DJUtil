<com.dj.util.AnimationLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#000000"
    android:id="@+id/testlayout"
    android:layout_width="100dip"
    android:layout_height="match_parent"
     >
        <Button 
            android:id="@+id/leftanimation"
            android:layout_width="50dip"
            android:layout_height="50dip"
            android:text="left_animation"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="100dip"
            android:layout_centerHorizontal="true"
            android:background="#ff0000"
            />
        <Button 
            android:id="@+id/rightanimation"
            android:layout_width="50dip"
            android:layout_height="50dip"
            android:text="right_animation"
             android:layout_alignParentTop="true"
            android:layout_marginTop="100dip"
            
            android:layout_centerHorizontal="true"
            android:background="#00ff00"
            />
</com.dj.util.AnimationLayout>