<com.dj.util.AnimationLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#000000"
    android:id="@+id/testlayout"
    android:layout_width="match_parent"
    android:layout_height="100dip"
     >
        <Button 
            android:id="@+id/leftanimation"
            android:layout_width="50dip"
            android:layout_height="50dip"
            android:text="left_animation"
             android:layout_alignParentRight="true"
            android:layout_marginRight="100dip"
            android:layout_centerVertical="true"
            android:background="#ff0000"
            />
        <Button 
            android:id="@+id/rightanimation"
            android:layout_width="50dip"
            android:layout_height="50dip"
            android:text="right_animation"
            
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="100dip"
            android:layout_centerVertical="true"
            android:background="#00ff00"
            />
</com.dj.util.AnimationLayout>