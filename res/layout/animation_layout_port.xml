<?xml version="1.0" encoding="utf-8"?>
<com.dj.util.AnimationLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/testlayout"
    android:layout_width="100dip"
    android:layout_height="match_parent"
    android:layout_centerHorizontal="true"
    android:background="@android:color/background_dark"
        >
        <Button 
            android:id="@+id/leftanimation"
            android:layout_width="50dip"
            android:layout_height="50dip"
            android:text="left_animation"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:background="#ff0000"
            android:layout_marginLeft="100dip"
            />
        <Button 
            android:id="@+id/rightanimation"
            android:layout_width="50dip"
            android:layout_height="50dip"
            android:text="right_animation"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="#00ff00"
            android:layout_marginRight="100dip"
            />
</com.dj.util.AnimationLayout>
